<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp">

	<TextView
		android:id="@+id/foodNameTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" android:layout_toRightOf="@+id/imageView" android:layout_marginLeft="5dp"/>

	<TextView
		android:id="@+id/foodDescriptionTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/foodNameTextView" android:layout_toRightOf="@+id/imageView" android:layout_marginLeft="5dp"/>

	<ImageView
	    android:id="@+id/imageView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:src="@drawable/stub"/>

</RelativeLayout>